<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <div class="session"><% if current_user %>
  Signed in as <%= current_user.first_name %> | <%= link_to 'Logout', "/sessions/#{current_user.id}", :method => :delete %>
  <% else %>
    <%= link_to 'Login', '/sessions/new' %> | <%= link_to 'Signup', '/users/new' %>
  <% end %></div>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
